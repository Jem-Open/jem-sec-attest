{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "jem-sec-attest Tenant Configuration Schema",
  "description": "Schema for tenant configuration files and base defaults.",
  "definitions": {
    "TenantConfig": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "hostnames": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "emailDomains": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "settings": {
          "default": {},
          "type": "object",
          "properties": {
            "branding": {
              "type": "object",
              "properties": {
                "logoUrl": {
                  "type": "string"
                },
                "primaryColor": {
                  "type": "string"
                },
                "displayName": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "features": {
              "type": "object",
              "propertyNames": {
                "type": "string"
              },
              "additionalProperties": {
                "type": "boolean"
              }
            },
            "integrations": {
              "type": "object",
              "properties": {
                "webhookUrl": {
                  "type": "string"
                },
                "ssoProvider": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "retention": {
              "type": "object",
              "properties": {
                "days": {
                  "type": "integer",
                  "exclusiveMinimum": 0,
                  "maximum": 9007199254740991
                }
              },
              "additionalProperties": false
            },
            "auth": {
              "type": "object",
              "properties": {
                "oidc": {
                  "type": "object",
                  "properties": {
                    "issuerUrl": {
                      "type": "string",
                      "format": "uri"
                    },
                    "clientId": {
                      "type": "string",
                      "minLength": 1
                    },
                    "clientSecret": {
                      "type": "string",
                      "pattern": "^\\$\\{[A-Z_][A-Z0-9_]*\\}$"
                    },
                    "redirectUri": {
                      "type": "string",
                      "format": "uri"
                    },
                    "scopes": {
                      "minItems": 1,
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "logoutUrl": {
                      "type": "string",
                      "format": "uri"
                    },
                    "claimMappings": {
                      "type": "object",
                      "propertyNames": {
                        "type": "string"
                      },
                      "additionalProperties": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "issuerUrl",
                    "clientId",
                    "clientSecret",
                    "redirectUri",
                    "scopes"
                  ],
                  "additionalProperties": false
                },
                "sessionTtlSeconds": {
                  "default": 3600,
                  "type": "integer",
                  "exclusiveMinimum": 0,
                  "maximum": 9007199254740991
                }
              },
              "required": [
                "sessionTtlSeconds"
              ],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "name",
        "hostnames",
        "emailDomains",
        "settings"
      ],
      "additionalProperties": false
    },
    "BaseConfig": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "defaults": {
          "type": "object",
          "properties": {
            "branding": {
              "type": "object",
              "properties": {
                "logoUrl": {
                  "type": "string"
                },
                "primaryColor": {
                  "type": "string"
                },
                "displayName": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "features": {
              "type": "object",
              "propertyNames": {
                "type": "string"
              },
              "additionalProperties": {
                "type": "boolean"
              }
            },
            "integrations": {
              "type": "object",
              "properties": {
                "webhookUrl": {
                  "type": "string"
                },
                "ssoProvider": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "retention": {
              "type": "object",
              "properties": {
                "days": {
                  "type": "integer",
                  "exclusiveMinimum": 0,
                  "maximum": 9007199254740991
                }
              },
              "additionalProperties": false
            },
            "auth": {
              "type": "object",
              "properties": {
                "oidc": {
                  "type": "object",
                  "properties": {
                    "issuerUrl": {
                      "type": "string",
                      "format": "uri"
                    },
                    "clientId": {
                      "type": "string",
                      "minLength": 1
                    },
                    "clientSecret": {
                      "type": "string",
                      "pattern": "^\\$\\{[A-Z_][A-Z0-9_]*\\}$"
                    },
                    "redirectUri": {
                      "type": "string",
                      "format": "uri"
                    },
                    "scopes": {
                      "minItems": 1,
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "logoutUrl": {
                      "type": "string",
                      "format": "uri"
                    },
                    "claimMappings": {
                      "type": "object",
                      "propertyNames": {
                        "type": "string"
                      },
                      "additionalProperties": {
                        "type": "string"
                      }
                    }
                  },
                  "required": [
                    "issuerUrl",
                    "clientId",
                    "clientSecret",
                    "redirectUri",
                    "scopes"
                  ],
                  "additionalProperties": false
                },
                "sessionTtlSeconds": {
                  "default": 3600,
                  "type": "integer",
                  "exclusiveMinimum": 0,
                  "maximum": 9007199254740991
                }
              },
              "required": [
                "sessionTtlSeconds"
              ],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "defaults"
      ],
      "additionalProperties": false
    }
  }
}
