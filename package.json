{
  "name": "jem-sec-attest",
  "version": "0.1.0",
  "description": "Multi-tenant security attestation training platform",
  "type": "module",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "generate:schema": "tsx scripts/generate-schema.ts",
    "docker:up": "docker compose -f docker/compose.yml up --build -d --wait",
    "docker:down": "docker compose -f docker/compose.yml down -v",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.45",
    "@ai-sdk/azure": "^3.0.31",
    "@ai-sdk/openai": "^3.0.30",
    "ai": "^6.0.90",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7",
    "iron-session": "^8.0.4",
    "next": "^16.1.6",
    "openid-client": "^6.8.2",
    "pdfkit": "^0.17.2",
    "postgres": "^3.4.8",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "safe-stable-stringify": "^2.5.0",
    "yaml": "^2.7.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.58.2",
    "@testcontainers/postgresql": "^11.12.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.4",
    "@types/pdfkit": "^0.17.5",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^3.0.5",
    "lefthook": "^1.10.10",
    "testcontainers": "^11.12.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "packageManager": "pnpm@9.15.4",
  "pnpm": {
    "overrides": {
      "minimatch@<10.2.1": ">=10.2.1"
    }
  }
}
